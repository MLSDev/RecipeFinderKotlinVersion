<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <!-- Text Views -->
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextViewStyle.RecipeItemTextStyle">
        <item name="android:background">@drawable/recipe_item_title_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseTextViewStyle.RecipeLabelStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecipeDetailsBlockStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="RecipeDetailsBlockTextWrapperStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="BaseTextViewStyle.EmptyListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSearchLabel</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseTextViewStyle.NutrientTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseTextViewStyle.BalanceLabelStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!-- END Text Views-->

    <style name="AlertDialogAppCompat" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="AnalyzeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_item_background</item>
        <item name="android:text">@string/btn_analyze</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--EditText-->
    <style name="BaseTextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextInputLayoutStyle.RecipeAnalysingStyle">
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/activity_horizontal_margin
        </item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/activity_horizontal_margin
        </item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>
    <!--END EditText-->

    <!--CardView-->
    <style name="BaseCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--END CardView-->
</resources>
