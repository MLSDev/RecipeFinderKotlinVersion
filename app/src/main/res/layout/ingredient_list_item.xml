<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.mlsdev.recipefinder.kotlinversion.view.analysenutrition.recipe.IngredientsAdapter.IngredientViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_ingredient_number"
            android:layout_width="@dimen/appbar_height"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@{viewModel.number}"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ingredient_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:text="@{viewModel.text}"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/iv_btn_cancel_ingredient"
            android:layout_width="@dimen/appbar_height"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{viewModel.onCancelButtonClick}"
            android:src="@drawable/btn_cancel" />
    </LinearLayout>

</layout>